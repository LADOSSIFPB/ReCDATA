<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FFF4"
    tools:context="${packageName}.${activityClass}" >

    <TextView
        android:id="@+id/textview_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LoginButton"
        android:layout_below="@+id/LoginButton"
        android:layout_marginTop="10px"
        android:text="Cadastre-se?"
        android:textColor="#474350"
        android:textSize="18dp"
        android:typeface="monospace" 
       />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="10dp"
        android:background="#474350"
        android:text="Logar"
        android:textColor="#000000"
        android:typeface="monospace" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/logoprojeto"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/LoginApp"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_weight="0.28"
            android:background="#474350"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:textColor="#FFF"
            android:drawableLeft="@drawable/iconuser"
            android:hint="Login"
        	android:inputType="text"
            >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/SenhaApp"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:background="#474350"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/iconlock"
            android:hint="Senha"
            android:textColor="#FFF">
       </EditText>
        
        
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Programação/Android/workspace/ReCDATA/app/src/main/res/layout/activity_tela_login.xml -->